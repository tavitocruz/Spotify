@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
fusia = #BD255B
gris_mas_claro = #f0f0f0

a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0
img
	vertical-aling top
ul
	margin 0
	padding 0
	
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

.container
	padding 1.4rem
	font-size 0
	text-align center
.actions
	background-color rgba(black,.3)
	bottom 0
	left 0
	position absolute
	right 0
.action
	color white
	font-size 1.3em
	margin-right .6em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro 

.name
	color gris_oscuro

.menu
	display none
.relative
	position relative


.autor
	color gris_claro
	
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 4px
		height 5px
		margin 0 auto
		width 75%
	.state
		background fusia
		border-radius 4px
		height 5px
		position relative
		width 30%
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
.header
	height 3.5em
	//a 
	//	display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:nth-child(even)
			margin-right 0
	p
		margin .5em 0
.playing
	&.small
		width 20em
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
	margin-right 2em
.search-icon
	position absolute
	left .5em
	top .85em
	color gris_claro
.close-icon
	position absolute
	top .7em
	color gris_claro
	right 2.5em

@media screen and (min-width:480px)

	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.midium
			width auto


@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.menu
		display block
		overflow hidden
		.item
			float left
			list-style none
			a
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_oscuro
	.header
		height auto
		.title
			display none
	.isotipo
		width 122px
	.logo
		padding 1.3em 0
		overflow hidden
		background white
	.avatar
		width 38px
		height 38px
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after
			content ""
			border-left 7px solid transparent
			border-top 8px solid gris_claro
			border-right 7px solid transparent
			display inline-block
			margin-left .4em

























